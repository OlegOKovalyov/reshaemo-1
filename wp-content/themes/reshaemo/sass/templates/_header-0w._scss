/* Dimox Bredcrumbs в главном узком меню */
.brdcrmb-wrap {
    align-items: flex-start;
    display: flex;
    margin-left: -25px;  
    img {
        align-self: center;
    }    
    .breadcrumbs {
        background-color: #88E769;
        font-size: .85rem;
        margin-bottom: 0;
        margin-left: .3rem;
        /* padding: 1.2rem 1rem 0.3rem; */
        padding: 0;
        .current {
            text-transform: lowercase; 
            &:after {
                content: ' ...';
            }           
        }
    }
}

/* Выберите ваш город: */
.choose-city {
    display: flex;
    margin-left: -20px;
    select {
        background: #88E769;
        border-radius: .6rem;
        font-size: 0.7rem;
        width: 95%;
        &:last-child {
            font-size: 0.8rem;
        }
    }
}
